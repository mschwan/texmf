\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{marticle}

\RequirePackage{lmodern}
\RequirePackage{graphicx}
\RequirePackage{float}
\RequirePackage{tikz}
\RequirePackage{circuitikz}
\RequirePackage{titlesec}
\RequirePackage{xcolor}
\RequirePackage{caption}
\RequirePackage{fancyhdr}
\RequirePackage{parskip}
\RequirePackage{booktabs}
\RequirePackage{csquotes}
\RequirePackage[fleqn]{amsmath}
\RequirePackage[a4paper, inner=1.5in, outer=1in]{geometry}

% bold figure and tabular captions
\captionsetup{labelfont=bf}

% allow to break displays such as long math equations
\allowdisplaybreaks

% chapter and section title formatting
\titleformat{\chapter}{\bfseries\LARGE}{\thechapter}{20pt}{}
\titleformat{\section}{\bfseries\Large}{\thesection}{1em}{}
\titleformat{\subsection}{\bfseries\large}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\bfseries\normalsize}{\thesubsubsection}{1em}{}

% fancy headers
\pagestyle{fancy}
\fancyhf{}
\fancyhead[le,ro]{\thepage}
\fancyhead[re]{\nouppercase{\leftmark}}
\fancyhead[lo]{\nouppercase{\rightmark}}
\renewcommand{\headrulewidth}{0.4pt}

\fancypagestyle{plain}{
    \fancyhf{}
    \renewcommand{\headrulewidth}{0.0pt}
}

% custom length only valid for DIN A4 paper
\setlength{\headheight}{14pt}
\setlength{\marginparwidth}{57pt}
\setlength{\textheight}{627pt}

% circuits
\tikzset{every picture/.style={line width=0.4pt}}
\ctikzset{bipoles/thickness=1.6}
\ctikzset{bipoles/length=1cm}

\ctikzset{voltage/distance from line=0.2}
\ctikzset{voltage/bump a/.initial=1.6}
\ctikzset{voltage/bump b/.initial=1.8}
\ctikzset{voltage/european label distance=2}
\ctikzset{bipoles/generic/voltage/european label distance=2.4}
