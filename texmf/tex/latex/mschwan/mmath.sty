\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mmath}

\RequirePackage{amsmath}
\RequirePackage{xfrac}
\RequirePackage{textcomp} % \textmu etc., should be obsolete
\RequirePackage{siunitx}

% Overwrite or create command with \declarecommand
\makeatletter
\newcommand*{\declarecommand}{%
    \@star@or@long\declare@command
}
\newcommand*{\declare@command}[1]{%
    \provide@command{#1}{}%
    \renew@command{#1}%
}
\makeatother

% Bold greek letters in section titles
\makeatletter
\g@addto@macro\bfseries{\boldmath}
\makeatother

% Complex numbers
\declarecommand{\im}[1]{\mathrm{Im} \left \{ #1 \right \}}
\declarecommand{\re}[1]{\mathrm{Re} \left \{ #1 \right \}}
\declarecommand{\ul}[1]{\underline{#1}}
\declarecommand{\ol}[1]{\overline{#1}}
\declarecommand{\e}{\mathrm{e}}
\declarecommand{\j}{\mathrm{j}}

% mathematical conditions
\newcommand{\with}{\hspace{2em} \text{mit} \hspace{1em}}

% displaystyle \sfrac
\newcommand{\dsfrac}[2]{\displaystyle\sfrac{#1}{#2}}

% differential operator
\declarecommand{\diff}{\,\mathrm{d}}

\newcommand{\sub}[1]{_\mathrm{#1}}
\newcommand{\super}[1]{^\mathrm{#1}}


% Units
\newcommand{\picoVolt}{\,\si{\pico\volt}}
\newcommand{\nanoVolt}{\,\si{\nano\volt}}
\newcommand{\microVolt}{\,\si{\micro\volt}}
\newcommand{\milliVolt}{\,\si{\milli\volt}}
\newcommand{\Volt}{\,\si{\volt}}
\newcommand{\kiloVolt}{\,\si{\kilo\volt}}

